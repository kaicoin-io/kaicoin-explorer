<% include views/template/header.ejs %>

<!--// blockhash, txid, fromaddress, toaddress, value, confirmations, time, date, txtype": "mine" -->
<main class="mdl-layout__content">
    <section class="section--center mdl-grid mdl-grid--no-spacing">
        <header class="mtd-table-blocks mdl-cell mdl-cell--2-col-desktop mdl-cell--2-col-tablet mdl-cell--2-col-phone mdl-color-text--white">
        </header>
        <div class="mdl-card mdl-cell mdl-cell--10-col-desktop mdl-cell--10-col-tablet mdl-cell--10-col-phone mtd-pad-verttop">
            <div class="mdl-card__supporting-text">
                <h4>Transaction Details</h4>
                <table id="table-chain-main" class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
                    <tbody>
                    <tr>
                        <th>TX ID</th><td colspan="5" class="mdl-data-table__cell--non-numeric"><%=item.txid%></td>
                    </tr>
                    <tr>
                        <th>Block Hash</th><td colspan="5" class="mdl-data-table__cell--non-numeric"><%=item.blockhash%></td>
                    </tr>
                    <tr>
                        <th>TX Type</th><td class="mdl-data-table__cell--non-numeric"><span class="label label-info"><%=item.txtype%></span></td>
                        <th>Confirmations</th><td class="mdl-data-table__cell--non-numeric"><span class="label label-info"><%=item.confirmations%></span></td>
                        <th>Value</th><td class="mdl-data-table__cell--non-numeric"><%=item.value%></td>
                    </tr>
                    <tr>
                        <th>From Address</th><td colspan="5" class="mdl-data-table__cell--non-numeric"><a href="/address/<%=item.fromaddress%>"><%=item.fromaddress%></a></td>
                    </tr>
                    <tr>
                        <th>To Address</th>
                        <td colspan="5" class="mdl-data-table__cell--non-numeric">
                            <a href="javascript:alert('<div class=ellipse><%=item.toaddress%></div><img src=https://api.qrserver.com/v1/create-qr-code/?size=232x232&data=<%=item.toaddress%>>');"><img src="/res/img/ic-qr.png" /></a>&nbsp;<a href="/address/<%=item.toaddress%>"><%=item.toaddress%></a></td>
                        </td>
                    </tr>
                    <tr>
                        <th>Time</th><td colspan="5" class="mdl-data-table__cell--non-numeric"><%=item.date%> (<%=item.time%>)</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <!-- Accent-colored raised button with ripple -->
                <ul class="mtd-buttons-area">
                    <li>
                        <a href="/txs">
                            <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored"><i class="material-icons">list</i>&nbsp;LIST</button>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </section>

</main>

<% include views/template/footer.ejs %>