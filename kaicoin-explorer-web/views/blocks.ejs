<% include views/template/header.ejs %>

<main class="mdl-layout__content mtd-page-block">

    <% include views/template/search_area.ejs %>

    <div class="mdl-grid">

        <header></header>

        <div class="mdl-card mtd-pad-verttop">

            <div class="mdl-card__supporting-text">

                <div class="mtd-card-title-wrapper">
                    <h4>Blocks&nbsp;</h4><div class="mtd-title-page-nav"><% if (list.length>0) { %><%=list[0].height%><% } else { %>0<% } %> of <%=summary.blocks%></div>
                </div>

                <table class="mdl-data-table mdl-js-data-tablematch-parent mdl-shadow--2dp">
                    <thead>
                    <tr>
                        <th>Block</th><th>Block Hash</th><th>Miner</th><th>Txns</th><th>Size</th><th>Confirm</th><th>Time</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (list.length<1) { %>
                        <tr><td colspan="7" class="mtd-td-empty">EMPTY BLOCK DATA</td></tr>
                    <% } %>
                    <% for(var i=0; i<list.length; i++) { %>
                    <tr>
                        <td><a class="mtd-middle-chars mtd-label" href="/block/<%=list[i].height%>"><span class="label label-info"><%=list[i].height%></span></a></td>
                        <td class="mdl-data-table__cell--non-numeric"><a class="mtd-middle-chars ellipse" href="/block/<%=list[i].hash%>"><%=list[i].hash%></a></td>
                        <td class="mdl-data-table__cell--non-numeric"><a class="mtd-middle-chars ellipse" href="#"><%=list[i].miner%></a></td>
                        <td><span class="label label-info"><%=list[i].txcount%></span></td>
                        <td><%=list[i].size%></td>
                        <td class="center"><span class="label label-info"><%=list[i].confirmations%></span></td>
                        <td><i class="fas fa-arrow-down"></i>&nbsp;<%=list[i].date%></td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>

                <br>
                <div class="mdl-card__actions mdl-card--border">
                    <div class="mtd-slider-pager">
                        <!-- Default Slider -->
                        <ul>
                            <li>
                                <button class="mdl-button">0</button>
                            </li>
                            <li>
                                <input class="mdl-slider mdl-js-slider" type="range" min="0" max="<%=summary.blocks%>" value="<%=summary.blocks%>" tabindex="0">
                            </li>
                            <li>
                                <button class="mdl-button"><%=list[0].height%></button>
                            </li>
                        </ul>
                    </div>
                    <div class="mtd-button-wrapper">
                        <a href="/"><button class="mdl-button mdl-js-button mdl-js-ripple-effect"><i class="fas fa-arrow-up"></i>&nbsp;HOME</button></a>
                    </div>
                </div>

            </div>
        </div>

    </div>

</main>

<% include views/template/footer.ejs %>