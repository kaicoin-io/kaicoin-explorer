<% include views/template/header.ejs %>

<!-- block height / miner / txns / age(ago) / fee used -->
<main class="mdl-layout__content">
    <% include views/template/search_area.ejs %>
    <section class="section--center mdl-grid mdl-grid--no-spacing">
        <header class="mtd-table-blocks mdl-cell mdl-cell--2-col-desktop mdl-cell--2-col-tablet mdl-cell--2-col-phone mdl-color-text--white">
        </header>
        <div class="mdl-card mdl-cell mdl-cell--10-col-desktop mdl-cell--10-col-tablet mdl-cell--10-col-phone mtd-pad-verttop">
            <div class="mdl-card__supporting-text">
                <h4>Blocks <% if (list.length>0) { %><%=list[0].height%><% } else { %>0<% } %> of <%=summary.blocks%></h4>
                <table class="mdl-data-table mdl-js-data-table match-parent-table mdl-shadow--2dp">
                    <thead>
                    <tr>
                        <th>Block</th><th>Block Hash</th><th>Miner</th><th>Txns</th><th>Size</th><th>Confirm</th><th>Time</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (list.length<1) { %>
                        <tr><td colspan="7" class="mtd-td-empty">EMPTY BLOCK DATA</td></tr>
                    <% } %>
                    <% for(var i=0; i<list.length; i++) { %>
                    <tr>
                        <td><a class="mtd-middle-chars mtd-label" href="/block/<%=list[i].height%>"><span class="label label-info"><%=list[i].height%></span></a></td>
                        <td class="mdl-data-table__cell--non-numeric"><a class="mtd-middle-chars ellipse" href="/block/<%=list[i].hash%>"><%=list[i].hash%></a></td>
                        <td class="mdl-data-table__cell--non-numeric"><a class="mtd-middle-chars ellipse" href="/address/<%=list[i].miner%>"><%=list[i].miner%></a></td>
                        <td><%=list[i].txcount%></td>
                        <td><%=list[i].size%></td>
                        <td><span class="label label-info"><%=list[i].confirmations%></span></td>
                        <td><%=list[i].date%></td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
                <br>
                <div class="mtd-slider-pager">
                    <!-- Default Slider -->
                    <div><button class="mdl-button mdl-js-button">PAGES</button></div><input class="mdl-slider mdl-js-slider" type="range" min="0" max="<%=summary.blocks%>" value="<%=summary.blocks%>" tabindex="0">
                </div>
            </div>
        </div>
    </section>

</main>

<% include views/template/footer.ejs %>